        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:text="Login"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:onClick="btn_camera_preview"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="match_parent"
